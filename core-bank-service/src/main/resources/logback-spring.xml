<?xml version="1.0" encoding="UTF-8"?>
<!--
  Logback 配置文件
  technical-standards-v1.0：结构化日志（JSON）必须包含 timestamp/level/service/traceId/message 等字段
  Day 11 安全加固：启用敏感数据脱敏功能
-->
<configuration scan="true" scanPeriod="30 seconds">

    <!-- 原始 JSON 日志格式（用于审计） -->
    <property name="LOG_PATTERN"
              value="{&quot;timestamp&quot;:&quot;%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}&quot;,&quot;level&quot;:&quot;%level&quot;,&quot;service&quot;:&quot;core-bank-service&quot;,&quot;traceId&quot;:&quot;%X{traceId}&quot;,&quot;requestId&quot;:&quot;%X{requestId}&quot;,&quot;callerService&quot;:&quot;%X{callerService}&quot;,&quot;thread&quot;:&quot;%thread&quot;,&quot;logger&quot;:&quot;%logger{36}&quot;,&quot;message&quot;:&quot;%msg&quot;}%n"/>

    <!-- 脱敏后的日志格式（用于一般日志输出） -->
    <property name="LOG_PATTERN_MASKED"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- 控制台输出（启用脱敏） -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="com.digitalbank.core.security.MaskingPatternLayout">
                <pattern>${LOG_PATTERN_MASKED}</pattern>
            </layout>
        </encoder>
    </appender>

    <!-- 控制台输出（原始，不脱敏，用于开发调试） -->
    <appender name="CONSOLE_RAW" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 文件输出（启用脱敏） -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH:-logs}/core-bank-service.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH:-logs}/core-bank-service.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="com.digitalbank.core.security.MaskingPatternLayout">
                <pattern>${LOG_PATTERN_MASKED}</pattern>
            </layout>
        </encoder>
    </appender>

    <!-- 安全审计日志（不脱敏，JSON 格式，仅限安全审计使用） -->
    <appender name="AUDIT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH:-logs}/audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH:-logs}/audit.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 应用日志级别 -->
    <logger name="com.digitalbank" level="DEBUG"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>

    <!-- 安全审计 Logger（单独记录，不脱敏） -->
    <logger name="com.digitalbank.core.audit" level="INFO" additivity="false">
        <appender-ref ref="AUDIT"/>
    </logger>

    <!-- 默认配置：使用脱敏控制台 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- 开发环境：使用原始 JSON 格式 -->
    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE_RAW"/>
        </root>
    </springProfile>

    <!-- 生产环境：使用脱敏文件日志 -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

</configuration>
